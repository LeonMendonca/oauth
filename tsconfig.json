{
  "compilerOptions": {
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "auto",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "noEmit": true,

    "strict": true,
    "noUncheckedIndexedAccess": true
  }
}
